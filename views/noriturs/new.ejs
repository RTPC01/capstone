<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">노리터 작성</h1>
    <div class="col-6 offset-3">
        <form action="/noritur" method="POST">
            <div class="mb-3">
                <label class="form label" for="title">제목</label>
                <input class="form-control" type="text" id="title" name="noritur[title]">
            </div>
            <div class="mb-3">
                <label class="form label" for="description"></label>
                <textarea class="form-control" type="text" id="description" name="noritur[description]" rows="10"></textarea>
            </div>
            <div class="mb-3">
                <label class="form label" for="image">이미지 Url</label>
                <input class="form-control" type="text" id="image" name="noritur[image]">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">작성</button>
            </div>
        </form>
        <a href="/noritur">노리터로 돌아가기</a>
    </div>
</div>